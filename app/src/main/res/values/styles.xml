<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="FormDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideUpAnimation</item>
    </style>

    <style name="SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light" >
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="CustomListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/row_background</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:textColor">#fff</item>


    </style>

</resources>

