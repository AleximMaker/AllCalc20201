<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FormDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideUpAnimation</item>
    </style>

    <style name="SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="CustomTheme" parent="MyTheme" >
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="CustomListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="MyTheme.ActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#663366</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>
</resources>

